{
    "name": "gastos-naia/dashboard",
    "description": "Dashboard de gastos anuales desde Google Sheets",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "google/apiclient": "^2.15",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "GastosNaia\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GastosNaia\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --testdox"
    }
}
